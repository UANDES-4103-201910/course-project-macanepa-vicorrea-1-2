<h2>Create your profile</h2>
<div class="card">
  <div class="card-body">
    <form action="">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <div>
              <img src="https://abs.twimg.com/sticky/default_profile_images/default_profile_normal.png" width="150vw" height="150vw" style="margin: 5%">
            </div>
            <div class="col-md-6">
              <button class="btn btn-outline-primary btn-sm">Select photo</button>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="profile-city">City:</label>
            <select class="form-control" id="profile-city" name="profile-city">
              <option>Santiago</option>
              <option>Roma</option>
              <option>Sydney</option>
            </select>
          </div>
          <div class="form-group">
            <label for="profile-country">Country:</label>
            <select class="form-control" id="profile-country" name="profile-country">
              <option>Brasil</option>
              <option>Chile</option>
              <option>Francia</option>
            </select>
          </div>
          <div class="form-check-inline">
            <label class="form-check-label">
              <input type="checkbox" class="form-check-input" value="">Give my GPS location
            </label>
          </div>
        </div>
      </div>
    </form>
    <div class="form-group">
      <label for="profile-biography">Biography:</label>
      <textarea class="form-control" id="profile-biography" name="profile-biography"></textarea>
    </div>
    <button class="btn btn-outline-primary" type="submit" style="float:right">Finish</button>
  </div>
</div>
