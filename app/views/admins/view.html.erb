          <a class="nav-link" data-toggle="pill" href="#block-list">Block list</a>
        </li>
      </ul>
    </div>

    <!-- Tab panes -->
    <div class="col-10">
      <div class="tab-content">
        <div id="manage-admins" class="container tab-pane active">
          <h3>Manage administrators</h3>
          <table class="table table-bordered table-hover">
            <thead>
            <tr>
              <th>User</th>
              <th>Geofence</th>
              <th>Is super admin</th>
              <th>Creation date</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            <% @admins.each do |admin| %>
              <!--:email, :geofence, :super_admin, :created_at-->
            <tr>
              <td><%= admin[0] %></td>
              <td><%= admin[1] %></td>
              <td><%= admin[2] %></td>
              <td><%= admin[3] %></td>
              <td><button class="btn btn-info fas fa-edit"></button></td>
              <td><button class="btn btn-danger fas fa-trash-alt"></button></td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
<!--        <div id="create-admin" class="container tab-pane fade">-->
<!--          <h3>Create administrator</h3>-->

<!--        </div>-->
        <div id="manage-users" class="container tab-pane fade">
          <h3>Manage users</h3>
          <table class="table table-bordered table-hover">
            <thead>
            <tr>
              <th>Name</th>
              <th>Last name</th>
              <th>Email</th>
              <th>Last access</th>
              <th>Creation date</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.last_access %></td>
              <td><%= user.created_at %></td>
              <td>
                <button class="btn btn-info fas fa-edit"></button>
              </td>
              <td>
                <button class="btn btn-danger fas fa-trash-alt"></button>
              </td>
            </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div id="manage-posts" class="container tab-pane fade">
          <h3>Manage posts</h3>
          <table class="table table-bordered table-hover">
            <thead>
            <tr>
              <th>User</th>
              <th>Title</th>
              <th>Content</th>
              <th>City</th>
              <th>Country</th>
              <th>GPS location</th>
              <th>Creation date</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            <% @posts.each do |post| %>
              <tr>
                <!--:email, :title, :content, :city, :country, :gps_location, :created_at-->
                <td><%= post[0] %></td>
                <td><%= post[1] %></td>
                <td><%= post[2] %></td>
                <td><%= post[3] %></td>
                <td><%= post[4] %></td>
                <td><%= post[5] %></td>
                <td><%= post[6] %></td>
                <td><button class="btn btn-info fas fa-edit"></button></td>
                <td><button class="btn btn-danger fas fa-trash-alt"></button></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <div id="blacklist" class="container tab-pane fade">
          <h3>Blacklist</h3>
          <table class="table table-bordered table-hover">
            <thead>
            <tr>
              <th>User</th>
              <th>Entry date</th>
              <th>Exit date</th>
              <th>Remove from the list</th>
            <tr>
            </thead>
            <tbody>
            <% @blacklist_users.each do |bl_user| %>
              <!--:email, :created_at, :exit_date-->
              <tr>
                <td><%= bl_user[0] %></td>
                <td><%= bl_user[1] %></td>
                <td><%= bl_user[2] %></td>
                <td><button class="btn btn-dark fas fa-sign-out-alt"></button></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <div id="dumpster" class="container tab-pane fade">
          <h3>Dumpster</h3>
          <table class="table table-bordered table-hover">
            <thead>
            <tr>
              <th>Post</th>
              <th>Entry date</th>
              <th>Exit date</th>
              <th>Remove from the dumpster</th>
            <tr>
            </thead>
            <tbody>
            <% @dumpster_posts.each do |d_post| %>
              <!--:title, :created_at, :exit_date-->
              <tr>
                <td><%= d_post[0] %></td>
                <td><%= d_post[1] %></td>
                <td><%= d_post[2] %></td>
                <td><button class="btn btn-dark fas fa-sign-out-alt"></button></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <div id="suspension-list" class="container tab-pane fade">
          <h3>Suspension list</h3>
          <table class="table table-bordered table-hover">
            <thead>
            <tr>
              <th>User</th>
              <th>Entry date</th>
              <th>Exit date</th>
              <th>Remove from the list</th>
            <tr>
            </thead>
            <tbody>
            <% @suspension_list_users.each do |sl_user| %>
              <!--:email, :created_at, :exit_date-->
              <tr>
                <td><%= sl_user[0] %></td>
                <td><%= sl_user[1] %></td>
                <td><%= sl_user[2] %></td>
                <td><button class="btn btn-dark fas fa-sign-out-alt"></button></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <div id="block-list" class="container tab-pane fade">
          <h3>Block list</h3>
          <table class="table table-bordered table-hover">
            <thead>
            <tr>
              <th>User</th>
              <th>Entry date</th>
              <th>Exit date</th>
              <th>Remove from the list</th>
            <tr>
            </thead>
            <tbody>
            <% @block_list_users.each do |bl_user| %>
              <!--:email, :created_at, :exit_date-->
              <tr>
                <td><%= bl_user[0] %></td>
                <td><%= bl_user[1] %></td>
                <td><%= bl_user[2] %></td>
                <td><button class="btn btn-dark fas fa-sign-out-alt"></button></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>