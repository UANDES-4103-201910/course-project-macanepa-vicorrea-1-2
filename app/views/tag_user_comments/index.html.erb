<p id="notice"><%= notice %></p>

<h1>Tag User Comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag_user_comments.each do |tag_user_comment| %>
      <tr>
        <td><%= tag_user_comment.user %></td>
        <td><%= tag_user_comment.comment %></td>
        <td><%= link_to 'Show', tag_user_comment %></td>
        <td><%= link_to 'Edit', edit_tag_user_comment_path(tag_user_comment) %></td>
        <td><%= link_to 'Destroy', tag_user_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

