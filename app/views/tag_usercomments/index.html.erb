<p id="notice"><%= notice %></p>

<h1>Tag Usercomments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag_usercomments.each do |tag_usercomment| %>
      <tr>
        <td><%= tag_usercomment.user %></td>
        <td><%= tag_usercomment.comment %></td>
        <td><%= link_to 'Show', tag_usercomment %></td>
        <td><%= link_to 'Edit', edit_tag_usercomment_path(tag_usercomment) %></td>
        <td><%= link_to 'Destroy', tag_usercomment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

