<p id="notice"><%= notice %></p>

<h1>File Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @file_attachments.each do |file_attachment| %>
      <tr>
        <td><%= file_attachment.post %></td>
        <td><%= file_attachment.file %></td>
        <td><%= link_to 'Show', file_attachment %></td>
        <td><%= link_to 'Edit', edit_file_attachment_path(file_attachment) %></td>
        <td><%= link_to 'Destroy', file_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New File Attachment', new_file_attachment_path %>
