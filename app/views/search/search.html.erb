
<!-- Tab panes -->
<div class="tab-content col-6 mx-auto">

  <div class="h2 text-primary">Results</div>
  <ul class="nav nav-pills" role="tablist">
    <li class="nav-item">
      <a class="nav-link" data-toggle="pill" href="#menu1">Posts</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="pill" href="#menu2">Profiles</a>
    </li>
  </ul>

  <div id="menu1" class="container tab-pane active"><br>
      <div class="post-results">
        <div class="tab-content">
          <div id="create-account-nav" class="container tab-pane active"><br>
            <% @posts.each do |post| %>
              <%= render("posts/post_pill", post:post) %>
          <% end %>
          </div>
        </div>
      </div>
  </div>
  <div id="menu2" class="container tab-pane fade"><br>
    <div class="post-results">
      <div class="tab-content">
        <div id="create-account-nav" class="container tab-pane active"><br>
          <% @posts.each do |post| %>
            <%= render("profiles/profile_pill", post:post) %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>



