
<div class="mainbody container-fluid">
  <div class="row">
    <div class="Following-Posts col-4">
      <div class="h5 text-primary mx-auto">Following</div>
      <hr>
      <% @posts.each do |post| %>
        <div class="container-fluid">
          <div class="col">
            <div class="card card-default mt-1">
              <div class="card-header">
                <div class="card-heading-container">
                  <div class="row justify-content-between">
                    <div class="meta col-10">
                      <div class="form-inline">
                      <a class="p small text-primary my-auto mx-2" href="<%= user_profile_view_path(user_id:post.user.id) %>"><%=post.user.name %> <%=post.user.last_name %></a>
                      <a class="p small text-secondary my-auto mx-1"  data-toggle="modal" data-target="#myModal"><%=post.title %></a>
                      <br><p class="p small text-secondary mx-2">Last Update:<%=post.updated_at %></p>
                    </div>
                    </div>
                    <!--                  <i class="fa fa-angle-down mx-2 my-auto pull-left" aria-hidden="true"></i>-->

                    <div class="col-2 dropdown">
                      <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="#">Unfollow Post</a>
                        <hr>
                        <a class="dropdown-item" href="#">Edit</a>
                        <a class="dropdown-item" href="#">Delete</a>
                        <hr>
                        <a class="dropdown-item" data-toggle="modal" data-target="#report-modal">Report</a>
                      </div>
                    </div>


                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <%end %>
    </div>


    <div class="Main-Posts col-7">
      <div class="container-fluid">
        <div class="text-primary h5">What are you thinking?</div>
        <div class="create-post-container">
          <div class="col">
            <hr>
            <div class="card card-default h-100">
              <div class="card-header">
                <div class="card-heading-container row">
                  <div class="form-inline row m-2 w-100">
                    <img src="https://abs.twimg.com/sticky/default_profile_images/default_profile_normal.png" class="my-auto mx-1 rounded-circle border border-primary">
                    <input type="text" class="form-control" id="title" placeholder="Post's Title" name="title">
                  </div>
                </div>

              </div>

              <div class="card-body">
                <textarea class="w-100 min-x" style="min-height: 130px; max-height: 250px;"></textarea>

                <div class="bottom-actions pull-right">
                  <button class="btn btn-outline-primary">Publish</button>
                </div>




              </div>

            </div>
          </div>
        </div>
      </div>
      <% @posts.each do |post| %>
        <%= render "posts/post_view", post:post %>
      <%end %>
    </div>
  </div>
</div>


<!-- The Modal -->
<div class="modal fade" id="myModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <!-- Modal body -->
      <div class="modal-body">
      </div>
    </div>
  </div>
</div>

<!-- The Modal -->
<div class="modal fade" id="report-modal">
  <div class="modal-dialog modal-md">
    <div class="modal-content">

      <div class="modal-header">
        <div class="h4">Report Post</div>
      </div>
      <!-- Modal body -->
      <div class="modal-body row">
        <div class="col-12">
          <textarea class="w-100 min-x" style="min-height: 130px; max-height: 250px;"></textarea>
        </div>
      </div>

      <div class="modal-footer">
        <button class="btn btn-primary">Report</button>
      </div>

    </div>
  </div>
</div>
